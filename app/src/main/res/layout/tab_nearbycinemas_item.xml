<?xml version="1.0" encoding="utf-8"?>
<!--推荐影院-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="#1c2243"
    android:padding="12dp">

    <!--<ImageView-->
        <!--android:id="@+id/tab_recommend_item_img"-->
        <!--android:layout_width="130dp"-->
        <!--android:layout_height="130dp" />-->
    <com.facebook.drawee.view.SimpleDraweeView
        app:roundedCornerRadius="8dp"
        android:layout_gravity="center"
        android:id="@+id/tab_nearbycinemas_item_img"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:actualImageScaleType="centerCrop"/>



    <LinearLayout
        android:id="@+id/tab_nearbycinemas_item_linear"
        android:layout_toRightOf="@+id/tab_nearbycinemas_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tab_nearbycinemas_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="保利国际影城"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:id="@+id/tab_nearbycinemas_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="介绍影院地址"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="64dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:id="@+id/tab_nearbycinemas_item_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:text="距离"/>
</RelativeLayout>