<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--正在热映-->
    <com.facebook.drawee.view.SimpleDraweeView
        app:roundedCornerRadius="5dp"
        android:layout_gravity="center"
        android:id="@+id/frag_home_release_img"
        android:layout_width="100dp"
        android:layout_height="130dp"
        app:actualImageScaleType="centerCrop"/>

    <TextView
        android:id="@+id/frag_home_release_name"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frag_home_release_img"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_marginTop="5dp"
        android:text="商品名称"
        android:textSize="12sp" />

    <TextView
        android:layout_alignBottom="@+id/frag_home_release_img"
        android:layout_marginBottom="5dp"
        android:id="@+id/frag_home_release_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:text="评分"/>

    <Button
        android:layout_below="@+id/frag_home_release_name"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:text="购票"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_home_goupiao"/>

</RelativeLayout>