<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.RegisterActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:background="@drawable/beijing"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#141931">

        <EditText
            android:layout_marginTop="3dp"
            android:id="@+id/register_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/edit_background"
            android:hint="请输入昵称"
            android:paddingLeft="15dp"
            android:textColor="#999999"
            android:textColorHint="#999999" />

        <EditText
            android:id="@+id/register_emil"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/register_name"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_background"
            android:hint="请输入邮箱账号"
            android:paddingLeft="15dp"
            android:textColor="#999999"
            android:textColorHint="#999999" />

        <EditText
            android:id="@+id/register_pwd"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/register_emil"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/edit_background"
            android:hint="请设置密码"
            android:password="true"
            android:paddingLeft="15dp"
            android:textColor="#999999"
            android:textColorHint="#999999" />

        <EditText
            android:id="@+id/register_yanzhneg"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/register_pwd"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_background"
            android:hint="请输入验证码"
            android:paddingLeft="15dp"
            android:textColor="#999999"
            android:textColorHint="#999999" />

        <Button
            android:id="@+id/register_huoqu"
            android:layout_width="96dp"
            android:layout_height="43dp"
            android:layout_below="@id/register_pwd"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/btn_background"
            android:gravity="center"
            android:text="获取验证码" />

        <Button
            android:id="@+id/register_login"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/register_huoqu"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="24dp"
            android:textColor="#fff"
            android:textSize="10sp"
            android:background="#666"
            tools:text="已有账号,立即登录" />

        <Button
            android:id="@+id/register_btn"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/register_login"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_denglu"
            android:gravity="center"
            android:text="注册"
            android:textColor="#fff" />


    </RelativeLayout>


</LinearLayout>