<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!--<ImageView-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="130dp"-->
        <!--android:src="@mipmap/ic_launcher"-->
        <!--android:id="@+id/frag_home_hot_img"/>-->

    <com.facebook.drawee.view.SimpleDraweeView
        android:paddingTop="7dp"
        app:roundedCornerRadius="5dp"
        android:layout_gravity="center"
        android:id="@+id/frag_home_hot_img"
        android:layout_width="100dp"
        android:layout_height="130dp"
        app:actualImageScaleType="centerCrop"/>

    <TextView
        android:id="@+id/frag_home_hot_name"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frag_home_hot_img"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_marginTop="5dp"
        android:text="商品名称"
        android:textSize="12sp" />

    <TextView
        android:layout_alignBottom="@+id/frag_home_hot_img"
        android:id="@+id/frag_home_hot_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:text="评分"/>

    <Button
        android:layout_below="@+id/frag_home_hot_name"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:text="购票"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_home_goupiao"/>

</RelativeLayout>