<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:background="@drawable/beijing"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#141931">

        <EditText
            android:layout_marginTop="3dp"
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/edit_background"
            android:hint="请输入邮箱账号"
            android:paddingLeft="15dp"
            android:textColor="#999999"
            android:textColorHint="#999999" />

        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/login_email"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_background"
            android:hint="请输入密码"
            android:paddingLeft="15dp"
            android:password="true"
            android:textColor="#999999"
            android:textColorHint="#999999" />

        <Button
            android:id="@+id/login_wangji"
            android:layout_width="96dp"
            android:layout_height="43dp"
            android:layout_below="@id/login_email"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/btn_background"
            android:gravity="center"
            android:text="忘记密码" />

        <TextView
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_wangji"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="35dp"
            android:textColor="#fff"
            android:textSize="10sp"
            android:background="#666"
            tools:text="暂无帐号 立即注册" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/login_register"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_denglu"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="登录"
            android:textColor="#fff" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/login_btn"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <View
                android:layout_width="93dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_marginLeft="73dp"
                android:layout_weight="1"
                android:background="#fff" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="或"
                android:textColor="#fff" />

            <View
                android:layout_width="93dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_marginRight="73dp"
                android:layout_weight="1"
                android:background="#fff" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/login_Wechat"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/ll"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_weixin"
            android:paddingLeft="5dp"
            app:srcCompat="@mipmap/weixin" />

    </RelativeLayout>


</LinearLayout>